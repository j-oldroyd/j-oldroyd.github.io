      \renewcommand{\vecm}[1]{\boldsymbol{#1}}
      \newcommand{\ivec}[1]{%
        \renewcommand{\arraystretch}{.8}%
        \begin{bmatrix}#1\end{bmatrix}%
        }
      \newcommand{\proj}[2]{\operatorname{proj}_{#1} #2}
